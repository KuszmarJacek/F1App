{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "FormulaOneApiRoute": {
        "ClusterId": "FormulaOneApiCluster",
        "Match": {
          "Path": "/formula-one/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "FormulaOneApiCluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5022"
          }
        }
      }
    }
  }
}